# Flight Finder MCP Configuration
# Copy this file to .env and fill in your values

# API Keys (at least one required for real flight searches)
FLIGHT_FINDER_SKYSCANNER_API_KEY=your_skyscanner_rapidapi_key_here
FLIGHT_FINDER_GOOGLE_FLIGHTS_API_KEY=your_google_flights_api_key_here

# Cache Settings
FLIGHT_FINDER_CACHE_ENABLED=true
FLIGHT_FINDER_CACHE_TTL_SECONDS=300
FLIGHT_FINDER_CACHE_MAX_SIZE=1000

# HTTP Client Settings
FLIGHT_FINDER_HTTP_TIMEOUT_SECONDS=30.0
FLIGHT_FINDER_HTTP_MAX_RETRIES=3
FLIGHT_FINDER_HTTP_RETRY_DELAY_SECONDS=1.0

# Logging Settings
FLIGHT_FINDER_LOG_LEVEL=INFO
FLIGHT_FINDER_LOG_FORMAT=console

# Provider Settings
FLIGHT_FINDER_DEFAULT_PROVIDER=skyscanner
FLIGHT_FINDER_ENABLE_FALLBACK_PROVIDERS=true

# Search Settings
FLIGHT_FINDER_MAX_SEARCH_RESULTS=50
FLIGHT_FINDER_DEFAULT_CURRENCY=USD
FLIGHT_FINDER_DEFAULT_LOCALE=en-US

# MCP Server Settings
FLIGHT_FINDER_SERVER_NAME=flight-finder-mcp
FLIGHT_FINDER_SERVER_VERSION=0.1.0
